@inherits LayoutComponentBase

<AppDrawer @ref="@appDrawer" Class="blazor-drawer-bg">
    <AppDrawerHeader Class="blazor-drawer-header-bg">
        <img src="/blazor.png" width="192" height="192" />
        <AppDrawerHeaderTitle Class="text-light">Blazorserver</AppDrawerHeaderTitle>
        <AppDrawerHeaderSubtitle Class="text-light">Responsive Mode</AppDrawerHeaderSubtitle>
    </AppDrawerHeader>
    <AppDrawerContent>
        <nav class="nav flex-column">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="oi oi-home" aria-hidden="true" tabindex="0"></span> Home
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="counter">
                    <span class="oi oi-plus" aria-hidden="true"></span> Counter
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="fetchdata">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
                </NavLink>
            </div>
        </nav>
    </AppDrawerContent>
</AppDrawer>
<AppContent ContainsAppBar="true">
    <div class="app-bar">
        <button class="app-drawer-button mr-auto" >
            <span class="oi oi-menu"></span>
        </button>
        <a href="http://blazor.net" target="_blank" class="ml-md-auto">About</a>
    </div>
    <MainContent>
        @Body
    </MainContent>
</AppContent>

@code {
    AppDrawer appDrawer;
}